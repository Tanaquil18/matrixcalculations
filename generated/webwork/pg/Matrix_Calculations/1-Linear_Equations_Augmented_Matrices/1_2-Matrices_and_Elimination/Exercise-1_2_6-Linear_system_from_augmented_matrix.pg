$b3 = 0;
$c3 = random(-9,9,1);
$d3 = Compute("$a3*$x+$b3*$y+$c3*$z");

$coeff1=Formula("$a1*x+$b1*y+$c1*z")->reduce;
$coeff2=Formula("$a2*x+$b2*y+$c2*z")->reduce;
$coeff3=Formula("$a3*x+$b3*y+$c3*z")->reduce;

