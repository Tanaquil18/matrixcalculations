##############################################################
#  Initialization
##############################################################

DOCUMENT();      

loadMacros(
    "PGstandard.pl",
    "MathObjects.pl",
    "PGchoicemacros.pl",
);

TEXT(beginproblem());

##############################################################
#  Problem Setup
##############################################################

Context("Numeric");

$a = random(2,7);
$b = random(2,7);

# Create and use pop up lists 
$tf = new_select_list();
$tf->rf_print_q(~~&pop_up_list_print_q);

# Choices presented to students
$tf->ra_pop_up_list( [ 
    "No answer" => "Choose", 
    "True"  => "True", 
    "False" => "False",
]);
	
# Questions and answers
$tf -> qa ( 
    "A nonsquare matrix could have an inverse.", "False",
    "Every square matrix has an inverse.","False",
    "The \( \displaystyle n \times n \) identity matrix is invertible.","True",
    "The \( \displaystyle n \times n \) zero matrix is invertible.","False",
    "If \( \displaystyle A \) and \( \displaystyle B \) are invertible matrices, then \( \displaystyle (AB)^{-1} = A^{-1}B^{-1} \) .","False",
    "If \( \displaystyle A \) and \( \displaystyle B \) are invertible matrices, then \( \displaystyle (AB)^{-1} = B^{-1}A^{-1} \) .","True",
    "If \( \displaystyle A \) and \( \displaystyle B \) are invertible matrices, then so is \( \displaystyle A+B \) .","False",
    "If \( \displaystyle A^$a = I \) then \( \displaystyle A \) is invertible.","True",
    "If \( \displaystyle A^$b = \mathbf{0} \) then \( \displaystyle A \) is not invertible.","True",
    "If \( \displaystyle A \) and \( \displaystyle B \) are square matrices such that \( \displaystyle AB = \mathbf{0} \) and \( \displaystyle A \) is invertible, then \( \displaystyle B = \mathbf{0} \) .","True",
    "If \( \displaystyle A \), \( \displaystyle B \), and \( \displaystyle X \) are matrices such that \( \displaystyle AX = B \), and \( \displaystyle A \) is invertible, then \( \displaystyle X = A^{-1}B \).","True",
    "If \( \displaystyle A \), \( \displaystyle B \), and \( \displaystyle X \) are matrices such that \( \displaystyle AX = B \), and \( \displaystyle A \) is invertible, then \( \displaystyle X = BA^{-1}\).","False",
);

# How many questions to use
$tf->choose(4);

##############################################################
#  Text
##############################################################

Context()->texStrings;
BEGIN_TEXT
Determine which of the following statements are true and which are false.
$BR
\{ $tf -> print_q() \}
END_TEXT
Context()->normalStrings;

##############################################################
#  Answers and Solutions
##############################################################

$showPartialCorrectAnswers = 0;

ANS( str_cmp( $tf->ra_correct_ans() ) );

ENDDOCUMENT();
